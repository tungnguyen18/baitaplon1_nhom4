        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@android:color/white"
            android:background="?attr/colorPrimary">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/header_menu"
                    android:id="@+id/imgBackAvantages"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avantages"
                    android:textColor="#fdfdfe"
                    android:textSize="30sp"
                    android:id="@+id/textView11"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/header_search"
                    android:id="@+id/imgSearchAvantages"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:id="@+id/tvPhoto"
                android:src="@drawable/avatage_one"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10% de remise les vehicules
Peugeot"
                android:textColor="#010102"
                android:textSize="18sp"
                android:id="@+id/tvTitle"
                android:paddingBottom="3dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/tvPhoto" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Voir plus →"
                android:textColor="#fd2d55"
                android:paddingTop="3dp"
                android:id="@+id/tvDescription"
                android:layout_below="@+id/tvTitle"
                android:layout_toEndOf="@+id/tvPhoto" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textView"
                android:layout_below="@+id/tvPhoto"
                android:layout_alignParentStart="true"
                android:background="#b3b3b3" />


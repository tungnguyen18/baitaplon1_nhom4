<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="17sp"
        android:textColor="#afaec1"
        android:text="ACTIVITE"
        android:id="@+id/txtLarge"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="14sp"
        android:text="Medium Text"
        android:id="@+id/txtMedium"
        android:textColor="#000001"
        android:layout_below="@+id/txtLarge" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="11sp"
        android:text="Small Text"
        android:id="@+id/txtSmall"
        android:layout_below="@+id/txtMedium"
        android:layout_alignEnd="@+id/txtLarge"
        android:layout_alignParentStart="true" />


</RelativeLayout>